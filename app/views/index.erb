<div class="container">
  <br>
  <h1>Notes Manager Thingey</h1>
  <center>

<!-- Error:: If Any -->
  <br>
  <% if @error_message %>
    <%= @error_message %>
    <br>
  <% end %>
  <br>

<!-- Create a note -->
  <h3>:: Create a Note ::</h3>
  <div class="container_sml">

    <%= erb :_create_note %>

    <br>
  </div>
  </center>

<!-- Viewing all Notes -->
  <% if @notes %>
    <% @notes.each do |note| %>
      <%= note.title %> : <br>
      <%= note.message %><br>

      <!-- Button to Update Note -->
      <span>
        <a href="/notes/<%= note.id %>/update">
          <button type="button">Update</button>
        </a>
      </span>
       | 
      <!-- Button to Delete Button -->
      <span>
        <a href="/notes/<%= note.id %>/delete">
          <button type="button">Delete</button>
        </a>
      </span>
      <br><hr>

    <% end %>
  <% end %>

</div>